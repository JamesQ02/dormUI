<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Settings">

    <ImageButton
        android:id="@+id/profileset"
        android:layout_width="195dp"
        android:layout_height="178dp"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="66dp"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/nameset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="John J. Johnson"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="66dp" />

    <TextView
        android:id="@+id/ageset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25 years old"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/numberset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0917xxxxxxxx"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="203dp" />

    <TextView
        android:id="@+id/typeset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Renter"
        android:textSize="18sp"
        tools:layout_editor_absoluteX="203dp"
        tools:layout_editor_absoluteY="113dp" />

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginTop="304dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <Button
            android:id="@+id/userset"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="User Settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginTop="496dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="1dp">

        <Button
            android:id="@+id/notifset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Notification Settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginTop="448dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <Button
            android:id="@+id/textset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accessibility Setting" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginTop="352dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <Button
            android:id="@+id/privacyset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Privacy Settings" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="414dp"
        android:layout_height="48dp"
        android:layout_marginTop="400dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="-2dp">

        <Button
            android:id="@+id/langset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Language Setting" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>